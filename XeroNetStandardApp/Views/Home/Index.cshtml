@model XeroNetStandardApp.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    @if (!Model.IsConnected)
    {
        <p>No Xero organisation connected.</p>
        <p>
            <button onclick="location.href='@Url.Action("Index", "Authorization")'">
                Connect to Xero
            </button>
        </p>
    }
    else
    {
        <h5>Your Xero Organisations</h5>
        <div class="mb-3">
            <a class="btn btn-secondary btn-sm me-2" asp-controller="Authorization" asp-action="Index">
                Add Organisation
            </a>
            <a class="btn btn-secondary btn-sm me-2" asp-controller="IdentityInfo" asp-action="Index">
                Manual Data Load
            </a>
            <a class="btn btn-secondary btn-sm" asp-controller="PollingConfig" asp-action="Index">
                Scheduled Data Load
            </a>
        </div>
        @if (Model.Tenants.Count == 0)
        {
            <p>No organisations connected.</p>
        }
        else
        {
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Organisation</th>
                        <th>Tenant Id</th>
                        <th>Last Updated</th>
                        <th>Rows Inserted</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model.Tenants)
                    {
                        <tr>
                            <td>@tenant.OrgName</td>
                            <td>@tenant.TenantId</td>
                            <td class="last-polled" data-tenant="@tenant.TenantId">—</td>
                            <td class="last-rows" data-tenant="@tenant.TenantId">—</td>
                            <td>
                                <a class="btn btn-primary btn-sm"
                                   asp-controller="Authorization"
                                   asp-action="Index">Reauthorise</a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm"
                                   asp-controller="Authorization"
                                   asp-action="Disconnect"
                                   asp-route-tenantId="@tenant.TenantId">Disconnect</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

@section Scripts {
    <script>
        function updateTenantInfo() {
            console.log('Starting script execution');

            document.querySelectorAll('.last-polled').forEach(function (cell) {
                var tid = cell.getAttribute('data-tenant');
                console.log('Processing last-polled cell for tenant ID:', tid);

                var val = localStorage.getItem('pollLast_' + tid);
                console.log('Retrieved value from local storage:', val);

                if (!val) {
                    console.log('No value found in local storage, setting text to "Not updated yet"');
                    cell.textContent = 'Not updated yet';
                    return;
                }

                var d = new Date(parseInt(val, 10));
                console.log('Parsed date:', d);

                if (isNaN(d.getTime())) {
                    console.log('Invalid date, setting text to "Not updated yet"');
                    cell.textContent = 'Not updated yet';
                    return;
                }

                console.log('Setting text to:', d.toLocaleString());
                cell.textContent = d.toLocaleString();
            });

            console.log('Finished processing last-polled cells');

            document.querySelectorAll('.last-rows').forEach(function (cell) {
                var tid = cell.getAttribute('data-tenant');
                console.log('Processing last-rows cell for tenant ID:', tid);

                var val = localStorage.getItem('pollRows_' + tid);
                console.log('Retrieved value from local storage:', val);

                if (!val) {
                    console.log('No value found in local storage, setting text to "—"');
                    cell.textContent = '—';
                    return;
                }

                var n = parseInt(val, 10);
                console.log('Parsed integer value:', n);

                if (isNaN(n)) {
                    console.log('Invalid integer value, setting text to "—"');
                    cell.textContent = '—';
                    return;
                }

                console.log('Setting text to:', n);
                cell.textContent = n;
            });

            console.log('Finished script execution');
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', updateTenantInfo);
        } else {
            updateTenantInfo();
        }
    </script>
}
